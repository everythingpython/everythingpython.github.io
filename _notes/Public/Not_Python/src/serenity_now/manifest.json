{
  "manifest_version": 3,
  "name": "Focus Mode",
  "version": "1.0",
  "description": "Shows a stylish splash screen on social media sites and counts visits.",
  "permissions": ["storage"],
  "host_permissions": [
    "*://*.x.com/*", "*://*.facebook.com/*", "*://*.reddit.com/*",
    "*://*.instagram.com/*", "*://*.linkedin.com/*","*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "settings.html"
  },
  "icons": {
    "16": "icons/serenity16.png",
    "48": "icons/serenity48.png",
    "128": "icons/serenity128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.x.com/*", "*://*.facebook.com/*", "*://*.reddit.com/*",
        "*://*.instagram.com/*", "*://*.linkedin.com/*","*://*.youtube.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "options_page": "settings.html"
}